<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorlayout"
    tools:context=".Add"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:background="#cdc9c9"
    android:layout_height="match_parent"
    android:layout_width="wrap_content">
    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Category"
        android:textSize="40sp"
        android:textStyle="bold"
        android:id="@+id/tvCategory"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:background="@drawable/stroke_bg"
        android:layout_below="@+id/tvCategory"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etBookName"
        android:hint="Book Name"
        android:singleLine="true"
        android:layout_below="@+id/spinner2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp"
        android:nextFocusForward="@+id/etAuthor"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etAuthor"
        android:hint="Author"
        android:singleLine="true"
        android:paddingBottom="10dp"
        android:nextFocusForward="@+id/etMRP"
        android:layout_below="@+id/etBookName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etMRP"
        android:singleLine="true"
        android:hint="MRP"
        android:inputType="number"
        android:layout_below="@+id/etAuthor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:nextFocusDown="@+id/bADD"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/bADD"
        android:gravity="center"
        android:layout_below="@+id/etMRP"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab2"
        android:background="#F44336"
        android:layout_gravity="bottom|end"
        android:src="@drawable/barcode"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>


</android.support.design.widget.CoordinatorLayout>